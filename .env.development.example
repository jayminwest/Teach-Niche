# TeachNiche Development Environment Example
# Rename to .env.development and fill in the values

# Supabase Development Environment
# Use a separate Supabase project for development
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_dev_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_service_role_key

# Stripe Test Environment
# IMPORTANT: Always use TEST MODE keys for development
STRIPE_SECRET_KEY=sk_test_your_test_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_from_stripe_cli

# Stripe Connect Test Configuration
STRIPE_CONNECT_CLIENT_ID=ca_test_your_connect_id
NEXT_PUBLIC_STRIPE_CONNECT_REDIRECT_URL=http://localhost:3000/dashboard/stripe-connect/success
STRIPE_PLATFORM_ACCOUNT_ID=acct_your_platform_account_id
STRIPE_APPLICATION_FEE_PERCENT=15

# Development Mode
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback