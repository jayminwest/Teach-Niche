# Supabase Configuration
# The URL of your Supabase project (Format: https://your-project-ref.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# The anonymous key for client-side Supabase access
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# The service role key for server-side privileged operations (never expose on client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# The database password for database migrations and direct access
SUPABASE_DB_PASSWORD=your_database_password

# Stripe Configuration
# The publishable key for client-side Stripe Elements and checkout
# Format: pk_test_... (test mode) or pk_live_... (live mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# The secret key for server-side Stripe API calls (never expose on client)
# Format: sk_test_... (test mode) or sk_live_... (live mode)
STRIPE_SECRET_KEY=your_stripe_secret_key
# The webhook secret for validating Stripe event signatures
# Format: whsec_...
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
# The webhook endpoint URL for Stripe events
STRIPE_WEBHOOK_URL=https://your-project-ref.supabase.co/functions/v1/stripe-webhook

# Stripe Connect Configuration
# The client ID for OAuth integration with instructors' Stripe accounts
# Format: ca_...
STRIPE_CONNECT_CLIENT_ID=your_stripe_connect_client_id
# The redirect URL after successful Stripe Connect onboarding
NEXT_PUBLIC_STRIPE_CONNECT_REDIRECT_URL=http://localhost:3000/dashboard/stripe-connect/success
# The ID of your platform Stripe account
# Format: acct_...
STRIPE_PLATFORM_ACCOUNT_ID=your_stripe_platform_account_id
# The percentage fee your platform takes from transactions (default: 15)
STRIPE_APPLICATION_FEE_PERCENT=15

# Next.js Configuration
# The site URL for generating absolute URLs
# Format: http://localhost:3000 (development) or https://your-domain.com (production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# The redirect URL after authentication
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback
# The current node environment (development, production, test)
# NODE_ENV=development

# Vercel Configuration
# The base URL of your application on Vercel (set automatically by Vercel)
# VERCEL_URL=your-project-name.vercel.app
# A convenience variable that can be set explicitly instead of relying on VERCEL_URL
# NEXT_PUBLIC_APP_URL=https://your-domain.com
